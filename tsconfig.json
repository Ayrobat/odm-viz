{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // Changed to false to reduce noise
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["vite/client", "@types/react", "@types/three", "node"],
    "jsxImportSource": "react",
    "allowJs": true, // Added to support JavaScript files
    "checkJs": true, // Added to type check JS files
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.d.ts", "**/*.json"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules/*",
    "**/dist/*",
    "**/build/*",
    "**/.turbo/*",
    "**/coverage/*",
    "**/*.config.js",
    "**/*.config.mjs",
    "**/*.config.cjs"
  ]
}
